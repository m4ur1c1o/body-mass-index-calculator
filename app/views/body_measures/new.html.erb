<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <div class="card">
      <div class="card-body text-center">
        <h1>BMI Calculator</h1>

        <%= form_for @body_measure do |f| %>
          <% if @body_measure.errors.any? %>
            <% @body_measure.errors.full_messages.each do |error| %>
              <%= js add_gritter(error, title: "BMI Calculator Notification", sticky: false) %>
            <% end %>
          <% end %>
          <div class="row">
            <div class="col-sm-6">
              <div class="form-group">
                <%= f.number_field :height, class: 'form-control', placeholder: 'Height', step: 'any' %>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="form-group">
                <%= f.number_field :weight, class: 'form-control', placeholder: 'Weight', step: 'any' %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.submit 'Calculate', class: 'btn btn-primary btn-block' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
