<h1>Calculate your BMI</h1>
<div class="row">
  <%= form_for @body_measure do |f| %>
    <div class="form-group">
      <%= f.label :height %>
      <%= f.text_field :height, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :weight %>
      <%= f.text_field :weight, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.submit class: 'btn btn-primary btn-block' %>
    </div>
  </div>
<% end %>
