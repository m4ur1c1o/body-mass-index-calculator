<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "BMI Calculator Alert", sticky: false) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "BMI Calculator Error", sticky: false) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "BMI Calculator Notification", sticky: false) %>
<% end %>
